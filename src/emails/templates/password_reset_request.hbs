{{! filepath: /Users/arcademan/Documents/Projects/ADSDIGITAL/cvcreator-backend/src/emails/templates/password_reset_request.hbs }}

<html lang="{{locale}}">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{t "password_reset_request_subject" args=subjectArgs}}</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 20px;
        color: #333;
      }
      .container {
        background-color: #f9f9f9;
        padding: 20px;
        border-radius: 5px;
      }
      .header {
        color: #444;
        font-size: 24px;
        margin-bottom: 20px;
      }
      .content p {
        line-height: 1.6;
      }
      .button {
        background-color: #007bff;
        color: white;
        padding: 10px 20px;
        text-decoration: none;
        border-radius: 5px;
        display: inline-block;
        margin-top: 10px;
      }
      .footer {
        margin-top: 20px;
        font-size: 12px;
        color: #777;
        text-align: center;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="header">{{t "password_reset_request_title"}}</div>
      <div class="content">
        <p>{{t "password_reset_request_greeting" args=greetingArgs}},</p>
        <p>{{t "password_reset_request_body_1" args=bodyArgs}}</p>
        <p>{{t "password_reset_request_body_ignore_if_not_requested"}}</p>
        <p>{{t "password_reset_request_body_2"}}</p>
        <p><a href="{{resetLink}}" class="button">{{t
              "email_button_reset_password"
            }}</a></p>
        <p>{{t "password_reset_request_body_button_alternative_link_text"}}</p>
        <p><a href="{{resetLink}}">{{resetLink}}</a></p>
        <p>{{t
            "password_reset_request_body_expiration_notice"
            args=bodyArgs
          }}</p>
        <p>{{t "password_reset_request_body_need_help" args=bodyArgs}}</p>
      </div>
      <div class="footer">
        <p>&copy;
          {{#if year}}{{year}}{{else}}{{currentYear}}{{/if}}
          {{serviceName}}.
          {{t "email_footer_rights_reserved"}}</p>
        <p>{{t "email_footer_sent_by" args=footerArgs}}</p>
        <p>{{t "email_footer_support" args=footerArgs}}</p>
      </div>
    </div>
  </body>
</html>