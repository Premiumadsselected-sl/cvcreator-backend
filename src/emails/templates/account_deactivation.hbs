{{! filepath: /Users/arcademan/Documents/Projects/ADSDIGITAL/cvcreator-backend/src/emails/templates/account_deactivation.hbs }}

<html lang="{{locale}}">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{t "account_deactivation_subject" args=subjectArgs}}</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 20px;
        color: #333;
      }
      .container {
        background-color: #f9f9f9;
        padding: 20px;
        border-radius: 5px;
      }
      .header {
        color: #444;
        font-size: 24px;
        margin-bottom: 20px;
      }
      .content p {
        line-height: 1.6;
      }
      .footer {
        margin-top: 20px;
        font-size: 12px;
        color: #777;
        text-align: center;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="header">{{t "account_deactivation_title"}}</div>
      <div class="content">
        <p>{{t "account_deactivation_greeting" args=greetingArgs}},</p>
        <p>{{t "account_deactivation_body_1" args=bodyArgs}}</p>
        <p>{{t "account_deactivation_body_data_policy"}}</p>
        <p>{{t "account_deactivation_body_2" args=bodyArgs}}</p>
        <p>{{t "account_deactivation_body_error_contact" args=bodyArgs}}</p>
      </div>
      <div class="footer">
        <p>&copy;
          {{#if year}}{{year}}{{else}}{{currentYear}}{{/if}}
          {{serviceName}}.
          {{t "email_footer_rights_reserved"}}</p>
        <p>{{t "email_footer_sent_by" args=footerArgs}}</p>
        <p>{{t "email_footer_support" args=footerArgs}}</p>
      </div>
    </div>
  </body>
</html>